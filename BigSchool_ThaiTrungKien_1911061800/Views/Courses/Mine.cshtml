@model IEnumerable<BigSchool_ThaiTrungKien_1911061800.Models.Course>
@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mine</h2>
<div class="container">

    <style type="text/css">
        #ul {
            list-style: none;
        }

        #date {
            text-align: center;
            background-color: #d41d50;
            color: white;
            width: 60px;
            border-radius: 8px;
        }

        #li {
            position: relative;
            margin-bottom: 30px;
        }

        #details {
            position: absolute;
            top: 0;
            left: 70px;
        }
        #action{
            display: block;
            left: 70px;
            position: absolute;
        }
        .course > li:hover .action{
            display: block;
        }
    </style>
    <div class="row">
            <ul id="ul">
                @foreach (var course in Model)
                {
                    <li>
                        @course.DateTime - @course.Lecturer.Name
                    </li>
                }
            </ul>
        </div>
    <ul class="course" id="ul">
        @foreach (var course in Model)
        {
            <li id="li">
                <div class="row" id="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>
                <div class="details" id="details">
                    <span class="lecturer">
                        @course.Lecturer.Name
                    </span>
                    <span class="category">
                        @course.Category.Name
                    </span>
                </div>
                <div class="action" id="action">
                    <a href="@Url.Action("Edit", "Courses", new {id = course.Id})">Edit</a>
                    <a href="">Delete</a>
                </div>
            </li>
        }
    </ul>
  